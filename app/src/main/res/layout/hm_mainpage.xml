<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:padding="0px"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"

        tools:layout_editor_absoluteY="16dp">


        <androidx.cardview.widget.CardView
            android:layout_width="429dp"
            android:layout_height="260dp">

            <LinearLayout

                android:layout_width="275dp"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="257dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/hostelmanage"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/management"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"

                        android:elevation="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inknut_antiqua_medium"
                        android:text="Hostel"
                        android:textAlignment="center"
                        android:textColor="#0C0C0C"
                        android:textDirection="firstStrongRtl"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/inknut_antiqua_medium"
                        android:text="Management"
                        android:textColor="#0C0C0C"
                        android:textSize="29sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="226dp"
                android:layout_height="242dp"
                android:layout_gravity="right"
                android:elevation="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/selection"></com.airbnb.lottie.LottieAnimationView>

        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="407dp"
                    android:layout_height="561dp"

                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="278dp"
                            android:layout_height="396dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/pics_background" />

                        <ImageButton
                            android:id="@+id/carpenterbutton"
                            android:layout_width="236dp"
                            android:layout_height="274dp"
                            android:layout_marginLeft="85dp"
                            android:layout_marginTop="50dp"
                            android:elevation="10dp"
                            android:paddingBottom="50dp"
                            app:srcCompat="@drawable/carpen" />

                        <TextView
                            android:id="@+id/Carpenter"

                            android:layout_width="192dp"
                            android:layout_height="72dp"
                            android:layout_gravity="bottom|center|center_horizontal|top"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="355dp"
                            android:background="@drawable/image"

                            android:fontFamily="@font/inknut_antiqua_medium"
                            android:gravity="center"
                            android:shadowColor="#000000"
                            android:shadowDx="100"
                            android:shadowDy="10"
                            android:text="Carpenter"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="21sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="407dp"
                    android:layout_height="561dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="278dp"
                            android:layout_height="400dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/pics_background" />

                        <ImageButton
                            android:id="@+id/plumberbutton"
                            android:layout_width="236dp"
                            android:layout_height="274dp"
                            android:layout_marginLeft="85dp"
                            android:layout_marginTop="50dp"
                            android:elevation="10dp"
                            android:paddingBottom="50dp"
                            app:srcCompat="@drawable/plumber2"   />


                        <TextView
                            android:id="@+id/Plumber"
                            android:layout_width="192dp"
                            android:layout_height="72dp"
                            android:layout_gravity="bottom|center|center_horizontal|top"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="355dp"
                            android:background="@drawable/image"

                            android:fontFamily="@font/inknut_antiqua_medium"
                            android:gravity="center"
                            android:shadowColor="#000000"
                            android:shadowDx="100"
                            android:shadowDy="10"
                            android:text="Plumber"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="21sp"
                            android:textStyle="normal"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="407dp"
                    android:layout_height="561dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="278dp"
                            android:layout_height="400dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/pics_background" />

                        <ImageButton
                            android:id="@+id/electricianbutton"
                            android:layout_width="236dp"
                            android:layout_height="274dp"
                            android:layout_marginLeft="85dp"
                            android:layout_marginTop="50dp"
                            android:elevation="10dp"
                            android:paddingBottom="50dp"
                            app:srcCompat="@drawable/elctrician"   />


                        <TextView
                            android:id="@+id/elct"
                            android:layout_width="192dp"
                            android:layout_height="72dp"
                            android:layout_gravity="bottom|center|center_horizontal|top"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="355dp"
                            android:background="@drawable/image"

                            android:fontFamily="@font/inknut_antiqua_medium"
                            android:gravity="center"
                            android:shadowColor="#000000"
                            android:shadowDx="100"
                            android:shadowDy="10"
                            android:text="Electrician"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="21sp"
                            android:textStyle="normal" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="407dp"
                    android:layout_height="561dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="278dp"
                            android:layout_height="400dp"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/pics_background" />

                        <ImageButton
                            android:id="@+id/cleanerbutton"
                            android:layout_width="236dp"
                            android:layout_height="274dp"
                            android:layout_marginLeft="85dp"
                            android:layout_marginTop="50dp"
                            android:elevation="10dp"
                            android:paddingBottom="50dp"
                            app:srcCompat="@drawable/cleaner"   />

                        <TextView
                            android:id="@+id/cleaner"
                            android:layout_width="192dp"
                            android:layout_height="72dp"
                            android:layout_gravity="bottom|center|center_horizontal|top"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="355dp"
                            android:background="@drawable/image"

                            android:fontFamily="@font/inknut_antiqua_medium"
                            android:gravity="center"
                            android:shadowColor="#000000"
                            android:shadowDx="100"
                            android:shadowDy="10"
                            android:text="Cleaner"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="21sp"
                            android:textStyle="normal" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>